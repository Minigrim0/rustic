// simple_melody.rt - A basic RusticScore example
title "Simple Melody Example"
tempo 120
time 4/4
key C major

// Using a built-in piano instrument
voice melody: builtin.piano {
    // Measure 1: Simple quarter notes ascending
    | c4 4 d4 4 e4 4 f4 4 |

    // Measure 2: With articulations (! = accent, : = staccato)
    | g4 4! a4 8: b4 8 c5 4 r 4 |

    // Measure 3: Chords
    | [c4 e4 g4] 2 [d4 f4 a4] 2 |

    // Measure 4: Whole note rest
    | r 1 |
}
